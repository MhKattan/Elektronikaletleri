@model EntityLayer.Entities.ConfirmMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Mail Onay Formu</h1>

<form >
    <div class="form-group">
        <h2>Onay Maili Gönderilen Mail Adresi @ViewBag.Email </h2>
    </div>
    <div class="form-group">
        <label>Mail Adresiniz</label>
        <input type="text" asp-for="Email" value="@ViewBag.Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>6 Haneli Kodunu Giriniz @ViewBag.Code</label>
        <input type="text" asp-for="ConfirmCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>6 Haneli Kodunu Giriniz</label>
        <input type="submit" value="Kayıt Ol" class="btn btn-success" />
    </div>
</form>
