@model EntityLayer.Entities.Personel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Personel Bilgileri Düzelt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Create">
        <div class="card-body">
            <input type="hidden" asp-for="@Model.PersonelId" />
            <div class="form-group">
                <label for="exampleInputEmail1">Personel Resmi</label>
                <input type="file" asp-for="FotoYukle" class="form-control" id="exampleInputEmail1" placeholder=" Resm Ekleyin">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Personel Adı</label>
                <input type="text" asp-for="@Model.PersonelName" class="form-control" id="exampleInputEmail1" placeholder="Personel Adını Girin">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Personel SoyAdı</label>
                <input type="text" asp-for="@Model.PersonelSurname" class="form-control" id="exampleInputEmail1" placeholder="Personel SoyAdını Girin">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Mail</label>
                <input type="email" asp-for="@Model.PersonelMail" class="form-control" id="exampleInputEmail1" placeholder="Mail Girin">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Şifre</label>
                <input type="text" asp-for="@Model.Password" class="form-control" id="exampleInputEmail1" placeholder="Şifre Girin">
            </div>
            
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Düzelt</button>
        </div>
    </form>
</div>