@model IEnumerable<EntityLayer.Entities.Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Personel</h1>

<div class="card-body p-0">
    <a asp-action="Create" asp-controller="Personel" class="btn btn-primary">Yeni Personel Ekle</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Personel Resmi</th>
                <th scope="col">Personel Adı</th>
                <th scope="col">Personel Soyadı </th>
                <th scope="col">Personel Maili </th>
                <th scope="col">Şifre </th>
                <th scope="col">Düzeltme </th>
                <th scope="col">Silme </th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {

                <tr>
                    <td>@i.</td>
                    <td><img src="~/FotoPersonel/@item.PersonelPicture" height="100px" width="100px" /></td>
                    <td>@item.PersonelName</td>
                    <td>@item.PersonelSurname</td>
                    <td>@item.PersonelMail</td>
                    <td>@item.Password</td>

                    <td><a class="btn btn-success" asp-action="Edit" asp-controller="Personel" asp-route-Id="@item.PersonelId">Düzelt</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Personel" asp-route-Id="@item.PersonelId">Silme</a></td>
                </tr>

                i++;

            }


        </tbody>

    </table>
</div>
<!-- /.card-body -->