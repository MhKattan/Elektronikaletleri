@model EntityLayer.Entities.Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kategori Sil</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Create">
        <div class="card-body">
            <input type="hidden" asp-for="@Model.CategoryId" />
            <div class="form-group">
                <label for="exampleInputEmail1">Kategori Adı</label>
                <input type="text" disabled asp-for="@Model.CategoryName" class="form-control" id="exampleInputEmail1" placeholder="Kategori Adını Girin">
            </div>



        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Silme</button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Category">İptal</a>
        </div>
    </form>
</div>
