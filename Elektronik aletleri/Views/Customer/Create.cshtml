@model EntityLayer.Entities.Customer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Müşteri Kayıt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Create">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputEmail1">Müşteri Adı</label>
                <input type="text" asp-for="@Model.CustomerName" class="form-control" id="exampleInputEmail1" placeholder="Müşteri Adını Girin">
                <span asp-validation-for="@Model.CustomerName" class="text-danger"></span>

            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputEmail1">Müşteri Soyadı</label>
                <input type="text" asp-for="@Model.CustomerSurname" class="form-control" id="exampleInputEmail1" placeholder="Müşteri Soyadı Girin">
                <span asp-validation-for="@Model.CustomerSurname" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputEmail1">Mail</label>
                <input type="text" asp-for="@Model.CustomerEmail" class="form-control" id="exampleInputEmail1" placeholder="Mail Girin">
                <span asp-validation-for="@Model.CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Şifre</label>
                <input type="text" asp-for="@Model.Password" class="form-control" id="exampleInputEmail1" placeholder="Şifre Girin">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>



        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
