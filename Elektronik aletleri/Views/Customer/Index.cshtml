@model IEnumerable<EntityLayer.Entities.Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Müşteri Listesi</h1>

<!-- /.card-header -->
<div class="card-body p-0">
    <a asp-action="Create" asp-controller="Customer" class="btn btn-primary">Yeni Müşteri Ekle</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Müşteri Adı</th>
                <th scope="col">Müşteri Soyadı</th>
                <th scope="col">Email </th>
                <th scope="col">Şifre </th>
                <th scope="col">Düzeltme </th>
                <th scope="col">Silme </th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {

                <tr>
                    <td>@i.</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerSurname</td>
                    <td>@item.CustomerEmail</td>
                    <td>@item.Password</td>

                    <td><a class="btn btn-success" asp-action="Edit" asp-controller="Customer" asp-route-Id="@item.CustomerId">Düzelt</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Customer" asp-route-Id="@item.CustomerId">Silme</a></td>
                </tr>

                i++;

            }
            

        </tbody>
        
    </table>
</div>
<!-- /.card-body -->